# MTFWBuilder Docker Environment Configuration
# Copy this file to .env and customize as needed

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_ENV=production
FLASK_DEBUG=false

# Application Configuration
PYTHONPATH=/app

# Optional: Customize firmware download URL
# FIRMWARE_REPO_URL=https://github.com/meshtastic/firmware.git

# Optional: Set custom temp directory
# TEMP_DIR=/app/temp

# Optional: Set custom firmware directory
# FIRMWARE_DIR=/app/firmware

# Optional: Custom logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO 